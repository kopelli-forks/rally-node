{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noEmit": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext"
  }
}